<Page x:Class="IMDBFinalProject.Pages.TVShowDetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="TV Show Details">

    <Page.Resources>
        <CollectionViewSource x:Key="tvShowViewSource" />
    </Page.Resources>

    <Grid Margin="10">
        <Border BorderBrush="White" BorderThickness="2" CornerRadius="10" Margin="10">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{Binding Name, Source={StaticResource tvShowViewSource}}" FontSize="24" FontWeight="Bold" Foreground="White" />
                <TextBlock Text="{Binding Description, Source={StaticResource tvShowViewSource}}" FontSize="16" Foreground="Gray" />
                <TextBlock Text="Actors/Actresses:" FontSize="18" FontWeight="Bold" Foreground="White" />
                <ListBox ItemsSource="{Binding Actors, Source={StaticResource tvShowViewSource}}" />
                <TextBlock Text="Writers:" FontSize="18" FontWeight="Bold" Foreground="White" />
                <ListBox ItemsSource="{Binding Writers, Source={StaticResource tvShowViewSource}}" />
                <TextBlock Text="Seasons:" FontSize="18" FontWeight="Bold" Foreground="White" />
                <ListBox x:Name="SeasonsListBox" ItemsSource="{Binding Seasons}" SelectionChanged="SeasonList_SelectionChanged" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
