<Page x:Class="IMDBFinalProject.Pages.LogoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IMDBFinalProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogoPage">

    <Page.Resources>
        <BitmapImage x:Key="ImdbLogoImage" UriSource="../Images/imdb_logo.png" />
    </Page.Resources>

    <Grid>
        <Image Source="{StaticResource ImdbLogoImage}" Margin="50"/>
    </Grid>
</Page>
